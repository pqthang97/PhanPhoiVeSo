@model QLVESO.Models.LoginModel
@{
    ViewBag.Title = "dangnhap";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<link rel="icon" type="/Assets/dangnhap/image/png" href="images/icons/favicon.ico" />
<!--===============================================================================================-->

<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="/Assets/dangnhap/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="/Assets/dangnhap/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="/Assets/dangnhap/vendor/animate/animate.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="/Assets/dangnhap/vendor/css-hamburgers/hamburgers.min.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="/Assets/dangnhap/vendor/animsition/css/animsition.min.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="/Assets/dangnhap/vendor/select2/select2.min.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="/Assets/dangnhap/vendor/daterangepicker/daterangepicker.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="/Assets/dangnhap/css/util.css">
<link rel="stylesheet" type="text/css" href="/Assets/dangnhap/css/main.css">

<div class="limiter">
    <div class="form-group" style="text-align: center;">
        @if (ViewBag.Success != null)
        {
            <div class="alert alert-success">@ViewBag.Success</div>
            <br />
        }
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">@Html.ValidationSummary(false)</div>
            <br />
        }
    </div>
    <div class="container-login100">
        @using (Html.BeginForm("dangnhap", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
                <form class="login100-form validate-form flex-sb flex-w">
                    <span class="login100-form-title p-b-32" style="color: #ff6600; text-align: center; font-weight: bold;">
                        Đăng nhập
                    </span>

                    <span class="txt1 p-b-11">
                        Tên tài khoản
                    </span>
                    <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">

                        @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "input100" } })
                        <span class="focus-input100"></span>


                    </div>
                    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                    <br />
                    <span class="txt1 p-b-11">
                        Mật khẩu
                    </span>
                    <div class="wrap-input100 validate-input m-b-12" data-validate="Password is required">
                        <span class="btn-show-pass">
                            <i class="fa fa-eye"></i>
                        </span>
                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "input100", @type = "password" } })
                        <span class="focus-input100"></span>

                    </div>
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })


                    <div class="container-login100-form-btn">
                        <button type="submit" class="login100-form-btn">
                            Đăng nhập
                        </button>
                    </div>

                </form>
            </div>
        }

    </div>
</div>



