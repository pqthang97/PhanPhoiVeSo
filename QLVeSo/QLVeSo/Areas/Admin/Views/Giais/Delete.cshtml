@model Models.EF.Giai

@{
    ViewBag.Title = "Xóa";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Xóa thông tin </h2>

<h3>Bạn muốn xóa thông tin Giải <em>@Html.DisplayFor(model => model.TenGiai)</em> này?</h3>
<div>
    <h4>Giai</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TenGiai)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenGiai)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SoTienNhan)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoTienNhan)
        </dd>

        

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-danger" /> &nbsp&nbsp&nbsp&nbsp
            <button class="btn btn-default" onclick="location.href='@Url.Action("Index")';return false;"><b>Trở lại</b></button>&nbsp&nbsp&nbsp&nbsp
        </div>
    }
</div>
